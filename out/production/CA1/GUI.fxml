<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="JSController" spacing="10" alignment="CENTER">
    <Label text="展示柜信息" />

    <Label text="ID" />
    <TextField fx:id="caseIdField" promptText="请输入展示柜ID" />

    <Label text="类型" />
    <TextField fx:id="typeField" promptText="请输入展示柜类型" />

    <Label text="照明" />
    <TextField fx:id="lightingField" promptText="请输入照明类型" />

    <Button text="新增展示柜" onAction="#handleAddNewDisplayCase"/>
</VBox>
